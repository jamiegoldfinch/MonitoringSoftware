{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Electron Main",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
      },
      "args": ["${workspaceFolder}/main.js"],
      "runtimeArgs": [
        "--nolazy",
        "--inspect=9222"
      ],
      "env": {
        "ELECTRON_DISABLE_SECURITY_WARNINGS": "true"
      },
      "sourceMaps": true,
      "outputCapture": "std"
    }
  ]
}
